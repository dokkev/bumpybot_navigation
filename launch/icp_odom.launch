<?xml version="1.0"?>

<launch>


  <!-- Arguments -->
  <arg name="rgbd"    default="false"/>
  <arg name="pm"      default="false"/>
  <arg name="nodelet" default="false"/>



  <node pkg="rtabmap_odom" type="icp_odometry" name="icp_odometry">
    <param name="odom_frame_id" value="icp_odom"/>
    <param name="frame_id" value="base_link"/>

  </node>


  

  <!-- We just use odometry without rtabmap node, so set a static /map->/odom
       transform so that rviz config below works out-of-the-box -->
  <node pkg="tf" type="static_transform_publisher" name="map_odom"
        args="0 0 0 0 0 0 map odom 100" />

  <!-- Visualization RVIZ -->
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find rtabmap_launch)/launch/config/rgbd.rviz"/>
</launch>